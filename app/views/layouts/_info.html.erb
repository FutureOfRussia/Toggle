<!-- Logo -->

<div class="row">
	<div class="logo">TOGGLE</div>
</div>

<!-- Br -->

<div class="row">
	<div class="br"></div>
</div>

<!-- User Info -->

<div class="row">

	<!-- Info -->

	<div class="col-sm-8">
		
		<div class="dropdown drop">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
				<%= "#{@user.first_name}" %>
			</a>
			<ul class="dropdown-menu">
	    		<li><%= link_to "Ваш профиль", vk_url(@user), target: '_blank' %></li>
	    		<li><%= link_to "Выход", signout_path, method: :delete %></li>
	    	</ul>
	    </div>

	    <div class="inf">
			Фото: <%= link_to "45", "#" %>
	    </div>

		<div class="dropdown drop">
			Друзья:
     		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
     			<%= "#{@friends.first}" %> 
     		</a>
        		<ul class="dropdown-menu">
					<%= render 'shared/friends' %>
				</ul>
    	</div>

	</div>
		
	<!-- Photo -->

	<div class="col-sm-4">
		<%= link_to image_tag(@user.photo, class: 'avt img-circle'), '#' %>
	</div>

</div>
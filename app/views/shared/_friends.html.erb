<% if @friends.empty? %>
	<li>Друзья не найдены</li>
<% else %>
<div class="search">
	<li>
		<form accept-charset="UTF-8" action="/search" method="get">
			<input type="text" class="form-control" placeholder="Search">
		</form>
	</li>
</div>
<div class="scroll">	
	<% @friends.items.each do |item| %>
		<li>
			<a href='#'>
				<div class="friends-name"><%= full_name(item) %></div>
				<div class="friends-img"><%= image_tag(item.photo, class: 'img-circle') %></div>
			</a>
		</li>
	<% end %>
</div>
<% end %>